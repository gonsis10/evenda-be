{
    // Visit https://aka.ms/tsconfig to read more about this file
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./dist",
        "module": "commonjs",
        "target": "es2016",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "typeRoots": ["./src/types", "./node_modules/@types"]
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}
